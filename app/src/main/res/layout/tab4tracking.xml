<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.Material.Wallpaper.NoTitleBar"
    android:background="?android:attr/panelBackground">

    <TextView
        android:text="Your March 2017's Mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moodText"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text='Quote of the Day: "In order to succeed, we must first believe that we can" -Google'
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginBottom="60dp"
        android:textSize="18sp"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/graph"
        android:id="@+id/imageView"
        android:paddingRight="30dp"
        android:paddingLeft="20dp"
        android:paddingBottom="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
