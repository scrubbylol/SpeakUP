<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.Material.Wallpaper.NoTitleBar"
    android:background="?android:attr/panelBackground">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profilePic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="0.69"
                    android:text="Supporters: N/A"
                    android:paddingBottom="10dp"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_width="120dp" />

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/pic8"
                    android:id="@+id/profilePic"
                    android:layout_height="330dp"
                    android:cropToPadding="true"
                    android:paddingBottom="40dp"
                    android:adjustViewBounds="true"
                    android:paddingTop="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/supporters"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/rh"
                    android:layout_above="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    tools:background="@android:color/background_light" />

                <TextView
                    android:text="Anon123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileTextName"
                    android:textStyle="normal|bold"
                    android:textSize="36sp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="19dp"
                    android:textAlignment="textEnd"
                    android:layout_alignParentTop="true"
                    android:layout_alignEnd="@+id/supporters"
                    android:layout_marginTop="20dp" />

            </RelativeLayout>

            <View
                android:layout_width="358dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="Bio: N/A"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="358dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <View
                android:layout_width="358dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="Interests: N/A"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="358dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:text="Previous Posts: N/A"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/white" />

            <TextView
                android:text="\n\n\n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

